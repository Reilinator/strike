        function handleUserInput(event) {
            if (event.keyCode === 13) {
                event.preventDefault();
                var userInput = document.getElementById("userInput").value;
                document.getElementById("userInput").value = "";
                displayUserMessage(userInput);
                processUserInput(userInput);
            }
        }

        function displayUserMessage(message) {
            var chatbox = document.getElementById("chatbox");
            var userMessageElement = document.createElement("p");
            userMessageElement.innerHTML = "<strong>You:</strong> " + message;
            chatbox.appendChild(userMessageElement);
            chatbox.scrollTop = chatbox.scrollHeight;
        }

        function displayBotMessage(message) {
            var chatbox = document.getElementById("chatbox");
            var botMessageElement = document.createElement("p");
            botMessageElement.innerHTML = "<strong>AI Bot:</strong> " + message;
            chatbox.appendChild(botMessageElement);
            chatbox.scrollTop = chatbox.scrollHeight;
        }

        function processUserInput(userInput) {
            var answer = qaPairs[userInput];
            if (answer) {
                displayBotMessage(answer);
            } else if (userInput.toLowerCase().includes("help")) {
                // Check if the input contains "help" in any case
                alert("If you need help with something related to /strike then go to the settings and click the chat button. Hope that helps.");
