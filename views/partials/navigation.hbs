    <script>
        function performSearch(event) {
            event.preventDefault();
            var searchTerm = document.getElementById('searchInput').value.toLowerCase();
            // Your search logic goes here
            // For this example, we'll use a simple switch statement to redirect to corresponding pages
            switch (searchTerm) {
                case 'home':
                    window.location.href = '/'; // Redirect to the home page
                    break;
                case 'login':
                    window.location.href = '/login'; // Redirect to the login page
                    break;
                case 'sign up':
                    window.location.href = '/signup'; // Redirect to the signup page
                    break;


                case 'about':
                    window.location.href = '/about'; // Redirect to the about page
                    break;
                case 'settings':
                    window.location.href = '/settings'; // Redirect to the settings page
                    break;
                case 'chatbot':
                    window.location.href = '/bot'; // Redirect to the chatbot page
                    break;
                case 'shop now':
                    window.location.href = '/shop'; // Redirect to the shop page
                    break;
                case 'privacy policy':
                    window.location.href = '/privacy'; // Redirect to the privacy policy page
                    break;
                case 'terms of service':
                    window.location.href = '/terms'; // Redirect to the terms of service page
                    break;
                default:
                    alert('No matching page found for your search.'); // Display an alert if no matching page is found
            }
        }
    </script>

